


<div class="row">
  <div class="col-sm-4">
   <h2>Make a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca" >Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit" class="btn btn-primary">Add Burger</button>
 
    </form>

  
  </div>


  <div class="col-sm-4">
    <h2> Ready to eat </h2>
    <ul>
      {{#each burger}}
      {{#if status}}
      <li class="burgerToEat" data-id="{{idburgers}}"">  <img src="./assets/img/burger.png"  alt="burger icon" width="50" height="50">  
        {{name}} 
        <img src="./assets/img/eatit.png"  alt="burger icon" width="50" height="50" style="float:right" title="Eat it yum yum"> 
        </li>
       {{/if}}
      {{/each}}
    </ul>

  </div>

  <div class="col-sm-4">
    <h2> Eaten </h2>

      {{#each burger}}
      {{#if status}}
      {{else}}
      <li class="burgerToEat" data-id="{{idburgers}}"">  <img src="./assets/img/toilet.jpg"  alt="burger icon" width="50" height="50">  
        {{name}} 
        <img src="./assets/img/flush.png"  alt="burger icon" width="50" height="50" style="float:right" title="Flush IT!"> 
        </li>
       {{/if}}
      {{/each}} 
      </div>