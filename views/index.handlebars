<h2>Make a burger</h2>
<div class="row">
  <div class="col-sm-4">
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>


  </div>


  <div class="col-sm-4">
    <h2> Ready to eat </h2>
    <ul>
      {{#each burger}}
      <li class="burgerToEat" data-id="{{idburgers}}"">  <img src="./assets/img/burger.png"  alt="burger icon" width="50" height="50">  
        {{name}} 
        <img src="./assets/img/eatit.png"  alt="burger icon" width="50" height="50" style="float:right" title="Eat it yum yum"> 
        </li>
      {{/each}}
    </ul>

  </div>

  <div class="col-sm-4">
   <h2> Burgers Eaten </h2>
  </div>